 * Description: Layout for adding or editing a note. It includes fields for title,
 *              content, an image preview, and actions like saving or picking media.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.AddEditNoteActivity">

    <!-- Title EditText -->
    <EditText
        android:id="@+id/etTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:hint="Title"
        android:inputType="textCapSentences"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Content EditText -->
    <EditText
        android:id="@+id/etContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:gravity="top"
        android:hint="Start writing your note..."
        android:inputType="textMultiLine|textCapSentences"
        android:lineSpacingMultiplier="1.2"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/ivMediaPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTitle" />

    <!-- Media Preview ImageView -->
    <ImageView
        android:id="@+id/ivMediaPreview"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="Preview of the attached media"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnPickMedia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        tools:visibility="visible" />

    <!-- Pick Media Button -->
    <Button
        android:id="@+id/btnPickMedia"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Pick Media"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveNote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Save Note Button -->
    <Button
        android:id="@+id/btnSaveNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Save"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cbFavorite"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Favorite CheckBox -->
    <CheckBox
        android:id="@+id/cbFavorite"
        android:layout_width="225dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:text="Favorite"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSaveNote"
        app:layout_constraintStart_toEndOf="@+id/btnSaveNote"
        app:layout_constraintTop_toTopOf="@+id/btnSaveNote" />

</androidx.constraintlayout.widget.ConstraintLayout>
